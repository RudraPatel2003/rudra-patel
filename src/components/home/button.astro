---
import type { HTMLAttributes } from "astro/types";

type Props = {
  href: string;
  text: string;
  variant: "primary" | "secondary";
  attributes?: HTMLAttributes<"a">;
};

const { href, text, variant, attributes } = Astro.props;

const variantClasses: Record<Props["variant"], string> = {
  primary: "bg-accent text-bg hover:opacity-90",
  secondary: "border border-accent text-accent hover:bg-accent hover:text-bg",
};
---

<a
  href={href}
  class={`rounded-sm px-4 py-2 font-medium transition-colors duration-150 hover:opacity-90 ${variantClasses[variant]}`}
  {...attributes}
>
  {text}
</a>
