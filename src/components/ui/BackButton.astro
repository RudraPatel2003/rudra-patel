---
import type { HTMLAttributes } from "astro/types";

interface Props {
  text: string;
  href: string;
  attributes?: HTMLAttributes<"a">;
}

const { text, href, attributes } = Astro.props;
---

<a
  href={href}
  class="flex items-center gap-2 text-xl font-medium text-accent"
  {...attributes}
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="lucide lucide-arrow-left"
  >
    <path d="M19 12H5"></path>
    <path d="M12 19L5 12L12 5"></path>
  </svg>
  <span>{text}</span>
</a>
