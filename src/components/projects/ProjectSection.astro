---
import type { Section } from "./ProjectsPage.astro";

type Props = {
  section: Section;
};

const { section } = Astro.props;
---

<hr class="my-4 border-secondary/20" />

<div class="mb-4">
  <h2 class="text-2xl font-semibold mb-2 text-primary">
    {section.sectionName}
  </h2>
  <p class="text-secondary text-lg mb-4">
    {section.sectionSubtitle}
  </p>
  <ul class="space-y-3 text-lg text-secondary mb-4">
    {
      section.projects.map((project) => (
        <li>
          <a
            href={project.link}
            target="_blank"
            rel="noreferrer"
            class="text-accent"
          >
            {project.name}
          </a>
          <p class="text-secondary text-lg mb-4">{project.description}</p>
        </li>
      ))
    }
  </ul>
</div>
